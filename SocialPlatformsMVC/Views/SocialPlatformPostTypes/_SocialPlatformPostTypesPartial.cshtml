@using DataAccessLayer.Data.Entities
@model SocialPlatformPostTypes

<div class="modal fade" id="addPostType">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title" id="addPostTypeLabel">Add Post Type</h4>
                <button type="button" class="close" data-dismiss="modal">
                    <span>x</span>
                </button>
            </div>
            <div class="modal-body">
                <form action="addPostType">
                    <div class="form-group">
                        <label asp-for="SocialPlatformId">Social Platform</label>
                        <select asp-for="SocialPlatformId">
                            @if (ViewBag.AllSocialPlatforms != null)
                            {
                                foreach (var socialPlatform in ViewBag.AllSocialPlatforms)
                                {
                                    <option value=@socialPlatform.Id>@socialPlatform.Key</option>
                                }
                            }
                        </select>
                        @*                        <input asp-for="SocialPlatform.Key" class="form-control"/>
                        *@                        <span asp-validation-for="SocialPlatformId" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Key"></label>
                        <input asp-for="Key" class="form-control" />
                        <span asp-validation-for="Key" class="text-danger"></span>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary" data-save="modal">Save</button>
            </div>
        </div>
    </div>

</div>